{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",
    "moduleResolution": "nodenext",
    "lib": ["ES2020", "DOM"],
    "sourceMap": true,
    "strict": true,
    "noUnusedLocals": true,
    "noImplicitReturns": true,
    "noImplicitOverride": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "composite": true,
    "rootDir": "src",
    "noEmit": true
    // "outDir": "build"
  },
  "include": ["src/**/*.ts"],
  "exclude": ["**/lib/**/*", "**/out/**/*", "**/node_modules/**/*"]
}
